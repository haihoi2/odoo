<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views -->
    <record id="view_employee_form" model="ir.ui.view">
         <field name="name">hr.employee.form</field>
          <field name="model">hr.employee</field>
          <field name="inherit_id" ref="hr.view_employee_form" />
          <field name="arch" type="xml">
          	<xpath expr="//div[hasclass('oe_title')]/h1" position="before">
                <h2>
                    <field name="code" placeholder="Employee's Code"/>
                </h2>
            </xpath>
            <xpath expr="//notebook" position="attributes">
                <attribute name="groups">hr.group_hr_manager</attribute>
            </xpath>
   		</field>
    </record>   
    
    <record id="view_employee_tree_inherit_kos" model="ir.ui.view">
        <field name="name">view.employee.tree.inherit.kos</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree" />
        <field name="arch" type="xml">
            <field name="name" position="before">
    			<field name="code"/>
    		</field>
        </field>
    </record>
    
    <!-- Search -->
    <record id="view_employee_filter_inherit_kos" model="ir.ui.view">
        <field name="name">view.employee.filter.inherit.kos</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter" />
        <field name="arch" type="xml">
        	<field name="name" position="before">
    			<field name="code"/>
    		</field>
         </field>
    </record>
</odoo>