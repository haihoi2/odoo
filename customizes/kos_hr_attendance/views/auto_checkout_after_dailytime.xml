<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ir_cron_auto_checkout" model="ir.cron">
        <field name="name">Attendance: Auto System checkout</field>
        <field name="model_id" ref="model_hr_attendance"/>
        <field name="state">code</field>
        <field name="code">model.auto_checkout_after_dailytime(23, 59, 0, 0)</field>
        <field name="nextcall" eval="datetime.now(pytz.timezone('UTC')).strftime('%Y-%m-%d 16:59:59')" />
        <!-- next call được ghi theo giờ UTC, giờ Viet Nam = giờ UTC + 7 -->
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
    </record>
</odoo>

