<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_personal_rule" model="ir.rule">
        <field name="name">Employee Attendance View</field>
        <field ref="hr_attendance.model_hr_attendance" name="model_id"/>
        <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
     <record id="kos_hr_attendance.group_hr_attendance_user_manager_kos" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_human_resources_attendances"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user')), (4, ref('hr_attendance.group_hr_attendance'))]"/>
    </record> 
    
    <record id="hr_attendance_rule_attendance_manager_kos" model="ir.rule">
         <field name="name">Attendance manager KOS</field>
         <field name="model_id" ref="model_hr_attendance"/>
         <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.parent_id.user_id','=',user.id)]</field>
         <field name="groups" eval="[(4,ref('kos_hr_attendance.group_hr_attendance_user_manager_kos'))]"/>
     </record>
      
      
    <record id="hr_attendance.group_hr_attendance_manager" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('kos_hr_attendance.group_hr_attendance_user_manager_kos'))]"/>
    </record>

    <record id="hr_attendance.group_hr_attendance_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('kos_hr_attendance.group_hr_attendance_user_manager_kos'))]"/>
    </record>
</odoo>
